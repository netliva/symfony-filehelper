<div class="panel panel-default netliva-file-list" id="netliva-file-list-{{options.group}}" data-refresh-url="{{path("netliva_filehelper_refreshSoftList")}}">
	<!-- Default panel contents -->
	<div class="panel-heading">
		<div class="pull-right">
			{% if options.upload_btn|is_true %}
				{{ file_uploader_button(options.group, null, null, options) }}
			{% endif %}
		</div>
		{{ options.title }}
	</div>
	<div class="panel-body">
		<p><em>{{ options.desc }}</em></p>
	</div>
	<!-- List group -->
	<ul class="list-group">

		{% include "@NetlivaSymfonyFileHelper/List.soft.lines.html.twig" %}

	</ul>
</div>
<textarea name="opt{{options.group}}" id="opt{{options.group}}" style="display: none;">{{ options|json_encode()|raw }}</textarea>

<script type="text/javascript">
	if (typeof(netliva_file_singleFileUpload_path) == "undefined")
		netliva_file_singleFileUpload_path = "{{path("netliva_filehelper_singleFileUpload")}}";
</script>
